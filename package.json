{
  "name": "spike-front",
  "version": "0.1.2",
  "description": "Benchmarking website for spike sorting algorithms. This isomorphic javascipt repo includes a client and back end.",
  "private": true,
  "author": "Elizabeth Lovero, @lizlove",
  "license": "Apache-2.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "NODE_OPTIONS=--max_old_space_size=4096 concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd client && yarn && yarn run build"
  },
  "dependencies": {
    "@sentry/browser": "^4.4.2",
    "@sentry/node": "4.5.3",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "dotenv": "^6.2.0",
    "es6-promisify": "^6.0.1",
    "eslint": "^6.6.0",
    "express": "^4.17.3",
    "html-to-text": "^4.0.0",
    "husky": "^1.3.1",
    "json-stable-stringify": "^1.0.1",
    "juice": "^5.1.0",
    "lint-staged": "^8.1.1",
    "mongoose": "^5.7.5",
    "mongoose-float": "^1.0.4",
    "nodemailer": "^5.1.1",
    "nodemon": "^1.18.11",
    "prettier": "1.17.0",
    "pug": "^2.0.3",
    "remove-markdown": "^0.3.0",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "acorn-dynamic-import": "3",
    "concurrently": "^4.0.1",
    "eslint-plugin-prettier": "^3.0.1"
  },
  "homepage": "https://spikeforest.flatironinstitute.org/"
}
